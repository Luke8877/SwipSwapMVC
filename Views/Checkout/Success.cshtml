@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/css/site.css" />
    <title>Purchase Success</title>
</head>

<body class="bg-gray-100 min-h-screen flex justify-center items-start p-6">

    <!-- Main Wrapper -->
    <div class="w-full max-w-7xl mx-auto space-y-10">

        <!-- Success Header -->
        <div class="bg-white shadow rounded-xl p-6 flex justify-between items-center">
            <div class="flex items-center gap-3">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" stroke-width="2"
                     viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                </svg>

                <div>
                    <p class="text-green-600 font-semibold">Purchase Successful!</p>
                    <p class="text-gray-500 text-sm">Your order has been confirmed. See details below.</p>
                </div>
            </div>

            <a href="/Home/Index"
               class="inline-flex items-center gap-2 bg-gray-900 text-white px-5 py-2 rounded-lg text-sm hover:bg-gray-800 transition">
                ← Back to Dashboard
            </a>
        </div>

        <!-- Item + Pickup Grid -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">

            <!-- Item Details -->
            <div class="bg-white shadow rounded-xl p-8">
                <h2 class="text-lg font-semibold text-gray-800 mb-4">Item Details</h2>

                <img src="https://placehold.co/600x400"
                     alt="Item Image"
                     class="w-full rounded-lg mb-6" />

                <h3 class="text-gray-900 font-medium">Vintage Camera</h3>
                <p class="text-gray-500 text-sm mb-6">
                    Canon AE-1 Program 35mm Film Camera with 50mm lens
                </p>

                <div class="grid grid-cols-2 gap-x-8 gap-y-4 text-sm text-gray-700">

                    <!-- Amount Paid -->
                    <p class="flex items-center gap-2">
                        <svg class="w-5 h-5 text-green-600 shrink-0 transform scale-90"
                             xmlns="http://www.w3.org/2000/svg"
                             fill="none"
                             viewBox="0 0 24 24"
                             stroke-width="1.5"
                             stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                  d="M12 6v12m-3-2.818.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                        </svg>
                        <span class="font-semibold text-green-600">$250.00</span>
                    </p>

                    <!-- Purchase Date -->
                    <p class="flex items-center gap-2">
                        <svg class="w-5 h-5 text-gray-700" fill="none" stroke="currentColor" stroke-width="2"
                             viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                  d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7H3v12a2 2 0 002 2z" />
                        </svg>

                        11/26/2025
                    </p>

                    <!-- Seller -->
                    <p class="flex items-center gap-2">
                        <svg class="w-5 h-5 text-gray-700 shrink-0"
                             xmlns="http://www.w3.org/2000/svg"
                             fill="none"
                             viewBox="0 0 24 24"
                             stroke-width="1.5"
                             stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                  d="M17.982 18.725A7.488 7.488 0 0 0 12 15.75a7.488 7.488 0 0 0-5.982 2.975m11.963 0a9 9 0 1 0-11.963 0m11.963 0A8.966 8.966 0 0 1 12 21a8.966 8.966 0 0 1-5.982-2.275M15 9.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                        </svg>
                        <span>John Smith</span>
                    </p>

                    <!-- Contact -->
                    <p class="flex items-center gap-2">
                        <svg class="w-5 h-5 text-gray-700" fill="none" stroke="currentColor" stroke-width="2"
                             viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                  d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25A2.25 2.25 0 0021.75 19.5v-1.372a1.125
                                  1.125 0 00-.852-1.091l-4.423-1.106a1.125 1.125 0
                                  00-1.173.417l-.97 1.293a1.125 1.125 0
                                  01-1.21.38A12.035 12.035 0 017.026 11.58
                                  a1.125 1.125 0 01.38-1.21l1.293-.97a1.125
                                  1.125 0 00.417-1.173L7.01 3.102A1.125
                                  1.125 0 005.918 2.25H4.5A2.25 2.25 0
                                  002.25 4.5v2.25Z" />
                        </svg>

                        (555) 123-4567
                    </p>

                    <!-- Location -->
                    <p class="flex items-center gap-2 col-span-2">
                        <svg class="w-5 h-5 text-red-500" fill="none" stroke="currentColor" stroke-width="2"
                             viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                  d="M12 22s8-4.5 8-11a8 8 0 10-16 0c0 6.5 8 11 8 11zm0-13a3 3 0 110 6 3 3 0 010-6z" />
                        </svg>

                        123 Market Street, San Francisco, CA 94103
                    </p>


                </div>
            </div>

            <!-- Pickup Location -->
            <div class="bg-white rounded-2xl p-8 shadow flex flex-col">

                <h2 class="font-semibold text-gray-800 mb-6 text-center">
                    Directions to Pickup Location
                </h2>

                <!-- Placeholder Box -->
                <div class="flex flex-col items-center justify-center bg-gray-50 border border-gray-200 rounded-2xl py-10 mb-6">

                    <svg class="w-12 h-12 text-gray-400 mb-4" xmlns="http://www.w3.org/2000/svg"
                         fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round"
                              d="M9 6.75V15m6-6v8.25m.503 3.498 4.875-2.437c.381-.19.622-.58.622-1.006V4.82c0-.836-.88-1.38-1.628-1.006l-3.869 1.934c-.317.159-.69.159-1.006 0L9.503 3.252a1.125 1.125 0 0 0-1.006 0L3.622 5.689C3.24 5.88 3 6.27 3 6.695V19.18c0 .836.88 1.38 1.628 1.006l3.869-1.934c.317-.159.69-.159 1.006 0l4.994 2.497c.317.158.69.158 1.006 0Z" />
                    </svg>

                    <p class="text-gray-500 text-sm text-center px-6">
                        Google Maps API Key Required<npbr>
                        Add key later to display map here.
                    </p>
                </div>

                <!-- Button -->
                <a href="#"
                   class="bg-blue-600 text-white px-4 py-3 rounded-lg w-full text-center hover:bg-blue-700 transition text-sm">
                    Open in Google Maps
                </a>

                <p class="mt-3 text-xs text-gray-400 text-center">
                    Click the map to open directions in Google Maps
                </p>

            </div>

        </div>

        <!-- Past Purchases -->
        <div class="bg-white shadow rounded-xl p-8">
            <h2 class="text-lg font-semibold text-gray-800 mb-4">Past Purchases</h2>

            <div class="overflow-y-auto max-h-64 border rounded-lg">
                <table class="w-full text-sm text-gray-700">
                    <thead class="bg-gray-100 text-xs uppercase text-gray-600">
                        <tr>
                            <th class="px-4 py-3 text-left">Order ID</th>
                            <th class="px-4 py-3 text-left">Item Name</th>
                            <th class="px-4 py-3 text-left">Amount Paid</th>
                            <th class="px-4 py-3 text-left">Purchase Date</th>
                            <th class="px-4 py-3 text-left">Status</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">

                        <tr>
                            <td class="px-4 py-3 font-medium">PUR-2025-002</td>
                            <td class="px-4 py-3">Mountain Bike</td>
                            <td class="px-4 py-3 text-green-600 font-semibold">$450.00</td>
                            <td class="px-4 py-3">11/19/2025</td>
                            <td class="px-4 py-3">
                                <span class="bg-green-50 text-green-600 text-xs px-3 py-1 rounded-full">
                                    Picked Up
                                </span>
                            </td>
                        </tr>

                        <tr>
                            <td class="px-4 py-3 font-medium">PUR-2025-003</td>
                            <td class="px-4 py-3">Gaming Console</td>
                            <td class="px-4 py-3 text-green-600 font-semibold">$300.00</td>
                            <td class="px-4 py-3">11/14/2025</td>
                            <td class="px-4 py-3">
                                <span class="bg-green-50 text-green-600 text-xs px-3 py-1 rounded-full">
                                    Picked Up
                                </span>
                            </td>
                        </tr>

                    </tbody>
                </table>
            </div>
        </div>

    </div>

</body>
</html>
