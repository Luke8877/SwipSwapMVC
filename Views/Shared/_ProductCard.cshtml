@model SwipSwapMVC.Models.Product

<div class="product-card shadow-lg rounded-xl p-4 hover:shadow-2xl transition-all cursor-pointer" onclick="openModal(@Model.ProductId)">
    <img src="@Model.ImageUrl" class="w-full h-48 object-cover rounded-md" />

    <h3 class="text-lg font-bold mt-2">@Model.Name</h3>
    <p class="text-gray-600">@Model.Description</p>
    <p class="text-green-700 font-semibold mt-1">@Model.Price.ToString("C")</p>
</div>
