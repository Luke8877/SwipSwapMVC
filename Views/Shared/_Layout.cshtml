<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SwipSwap Marketplace</title>
    @RenderSection("Styles", required: false)
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!--Add a dark mode class if the dark theme is toggled-->
    <script>
        if (localStorage.theme === 'dark') {
            document.documentElement.classList.add('dark')
        }
    </script>
</head>

<body class="min-h-screen transition-colors duration-300 bg-[#F6EFD8] dark:bg-gray-900 text-gray-800">

    <!-- NAVBAR -->
    <header class="border-b bg-white dark:bg-gray-800 shadow-sm transition-colors duration-300">
        <nav class="max-w-7xl mx-auto px-4 py-3 flex items-center justify-between">

            <a class="text-xl font-bold text-green-700 dark:text-green-400"
               asp-controller="Home" asp-action="Index">
                SwipSwap Marketplace
            </a>

            <div class="space-x-6">
                <a asp-controller="MyListings" asp-action="Index"
                   class="hover:text-green-700 dark:hover:text-green-400">
                    My Listings
                </a>

                <a asp-controller="Dashboard" asp-action="Index"
                   class="hover:text-green-700 dark:hover:text-green-400">
                    Dashboard
                </a>

                <a asp-controller="Payments" asp-action="History"
                   class="hover:text-green-700 dark:hover:text-green-400">
                    Purchases
                </a>

                <a asp-controller="Account" asp-action="Login"
                   class="hover:text-green-700 dark:hover:text-green-400">
                    Logout
                </a>
            </div>

            <button onclick="toggleTheme()"
                    class="px-3 py-1 rounded border dark:border-gray-400">
                🌙
            </button>
        </nav>
    </header>


    <!-- MAIN CONTENT -->
    <main class="max-w-7xl mx-auto px-4 py-6">
        @RenderBody()
    </main>

    <!-- GLOBAL MODALS RENDER HERE -->
    @RenderSection("Modals", required: false)

    <!-- FOOTER -->
    <footer class="border-t py-4 text-center text-gray-500">
        &copy; 2025 - SwipSwap Marketplace -
        <a asp-controller="Home" asp-action="Privacy"
           class="text-green-700 hover:underline">Privacy</a>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        function toggleTheme() {
            document.documentElement.classList.toggle('dark')

            localStorage.theme =
                document.documentElement.classList.contains('dark')
                    ? 'dark'
                    : 'light'
        }
    </script>
</body>
</html>
