<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SwipSwapMVC</title>

    <!-- Tailwind -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body class="bg-gray-50 text-gray-900">

    <!-- NAVBAR -->
    <header class="bg-white shadow-sm">
        <div class="max-w-7xl mx-auto px-6 py-4 flex items-center justify-between">
            <a href="/" class="text-2xl font-bold text-green-600 hover:text-green-700">
                SwipSwapMVC
            </a>

            <nav class="flex space-x-8 text-gray-700">
                <a href="/" class="hover:text-black">Home</a>
                <a href="/Home/Privacy" class="hover:text-black">Privacy</a>
            </nav>
        </div>
    </header>


    <!-- MAIN CONTENT -->
    <main class="max-w-7xl mx-auto px-4 py-6">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="border-t py-4 text-center text-gray-500">
        &copy; 2025 - SwipSwapMVC -
        <a asp-controller="Home" asp-action="Privacy" class="text-green-700 hover:underline">Privacy</a>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
