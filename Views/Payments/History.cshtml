@using SwipSwapMVC.Models
@model List<Order>
@{
    Layout = "_Layout";
}

<h2 class="text-2xl font-bold mb-6">Purchase History</h2>

@if (Model.Any())
{
    <!--  Card Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-10">
        @foreach (var order in Model)
        {
            <div class="bg-white dark:bg-gray-800 shadow rounded-xl p-4 border dark:border-gray-700 flex flex-col h-full">

                <img src="@order.Product.ImageUrl"
                     class="w-full h-48 object-cover rounded mb-3" />

                <h3 class="font-semibold text-gray-900 dark:text-gray-100 mb-1">
                    @order.Product.Name
                </h3>

                <p class="text-gray-600 dark:text-gray-300 text-sm mb-3 line-clamp-2">
                    @order.Product.Description
                </p>

                <div class="mt-auto">
                    <p class="text-green-700 font-semibold">
                        @order.Payment.Amount.ToString("C")
                    </p>

                    <p class="text-gray-500 text-sm mb-4">
                        @order.CreatedAt.ToShortDateString()
                    </p>

                    <a asp-controller="Checkout"
                       asp-action="Success"
                       asp-route-orderId="@order.OrderId"
                       class="block w-full bg-green-700 hover:bg-green-800 text-white
                                      px-4 py-2 rounded-lg text-sm text-center">
                        View Past Checkout
                    </a>
                </div>
            </div>
        }
    </div>

    <!--  Past Purchases Table Section -->
    <div class="bg-white shadow rounded-xl p-6 mt-8">
        <h2 class="text-lg font-semibold text-gray-800 mb-4">Purchase History</h2>

        <div class="overflow-y-auto max-h-80 border rounded-lg">
            <table class="w-full text-sm text-gray-700">
                <thead class="bg-gray-100 text-xs uppercase text-gray-600">
                    <tr>
                        <th class="px-4 py-3 text-left">Order ID</th>
                        <th class="px-4 py-3 text-left">Item Name</th>
                        <th class="px-4 py-3 text-left">Amount Paid</th>
                        <th class="px-4 py-3 text-left">Date</th>
                        <th class="px-4 py-3 text-left">Status</th>
                    </tr>
                </thead>

                <tbody class="divide-y divide-gray-200">
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td class="px-4 py-3 font-medium">@order.OrderId</td>
                            <td class="px-4 py-3">@order.Product.Name</td>
                            <td class="px-4 py-3 text-green-600 font-semibold">
                                @order.Payment.Amount.ToString("C")
                            </td>
                            <td class="px-4 py-3">
                                @order.CreatedAt.ToShortDateString()
                            </td>
                            <td class="px-4 py-3">
                                <span class="bg-green-50 text-green-600 text-xs px-3 py-1 rounded-full">
                                    @order.Status
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
