@model SwipSwapMVC.Models.User

@{
    Layout = "_AuthLayout";
}

<div class="auth-wrapper flex flex-column">
    <!-- Title visible on ALL auth pages -->
    <div class="text-center mt-5 mb-4">
        <h1 class="display-1 fw-bold" style="color:#16A34A;">
            SwipSwap Marketplace
        </h1>
    </div>

    <div class="auth-card">
        <h2 class="auth-title">Login</h2>

        <form asp-action="Login" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Username">Username or Email</label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Login</button>

            <div class="text-center mt-3">
                <a asp-action="ForgotPassword">Forgot your password?</a>
            </div>
            <div class="text-center mt-3">
                No account? <a asp-action="Register">Create one</a>
            </div>
        </form>
    </div>
</div>
